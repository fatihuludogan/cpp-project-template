{
    // --- Editor Settings --- //
    "editor.fontFamily": "'source code pro'",
    "editor.lineHeight": 18,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/.hg/store/**": true,
        "build/**": true,
        "configured/**": true
    },
    "breadcrumbs.enabled": true,

    // --- Git --- //
    "git.enableSmartCommit": true,
    "git.autofetch": true,

    // --- C++ --- //
    "C_Cpp.default.cStandard": "c11",
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.formatting": "disabled",
    "clang-format.executable": "/usr/bin/clang-format",
    "C_Cpp.default.compilerPath": "/usr/bin/clang++-15",
    "C_Cpp.default.intelliSenseMode": "linux-clang-x64",
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/**",
        "${vcpkgRoot}/x64-linux/include"
    ],

    // --- CMake --- //
    "cmakeExplorer.buildDir": "build",
    "cmake.configureArgs": ["-Wno-dev"],
    "cmake.configureOnOpen": true,
    "cmake.generator": "Unix Makefiles",
    "cmake.debugConfig": {},
    "cmake.configureSettings": {
        "CMAKE_TOOLCHAIN_FILE": "/home/fatih/vcpkg/scripts/buildsystems/vcpkg.cmake"
    },

    // --- Doxygen --- //
    "doxdocgen.file.fileTemplate": "@file     {name} ",
    "doxdocgen.cpp.tparamTemplate": "@tparam   {param} ",
    "doxdocgen.generic.paramTemplate": "@param     {param} ",
    "doxdocgen.generic.authorTag": "@author   {author} <{email}> ",
    "doxdocgen.generic.dateFormat": "DD.MM.YYYY",
    "doxdocgen.generic.dateTemplate": "@date     {date} ",
    "doxdocgen.generic.boolReturnsTrueFalse": false,
    "doxdocgen.generic.returnTemplate": "@return ",
    "doxdocgen.file.fileOrder": [
        "custom",
        "empty",
        "empty",
        "file",
        "author",
        "date",
        "empty",
        "copyright",
        "custom"
    ],

    // --- better comments --- //
    "better-comments.tags": [
        {
            "tag": "XXX",
            "color": "#F8C471"
        },
        {
            "tag": "WARN",
            "color": "#FF6961"
        },
        {
            "tag": "NOTE",
            "color": "#3498DB"
        },
        {
            "tag": "TODO",
            "color": "#77C3EC"
        }
    ],

    // --- Error Lens --- //
    "errorLens.delay": 1000,
    "errorLens.enabledDiagnosticLevels": ["error", "warning"],
    "errorLens.enabled": true,

    // --- Others --- //
    "remote.WSL.fileWatcher.polling": true,
}
